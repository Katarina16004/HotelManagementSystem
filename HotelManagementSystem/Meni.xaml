<Window x:Class="HotelManagementSystem.Meni"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelManagementSystem"
        mc:Ignorable="d"
        Title="Meni" Height="450" Width="800">
    <Window.Resources>
        
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#99C68E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Foreground" Value="#806517"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TabControl Grid.Row="1" TabStripPlacement="Left" >
            
            <TabItem Header="Dashboard">
                <TextBlock Grid.Column="1" Grid.Row="1" Text="Dashboard Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="Black"/>
            </TabItem>

            <TabItem Header="Sobe">
                <TextBlock Text="Rooms Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="Black"/>
            </TabItem>

            <TabItem Header="Rezervacije">
                <TextBlock Text="Reservations Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="Black"/>
            </TabItem>

            <TabItem Header="Uredi rezervacije">
                <TextBlock Text="Reservation Settings Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="Black"/>
            </TabItem>

            <TabItem Header="Uredi sobe">
                <TextBlock Text="Room Settings Content" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24" Foreground="Black"/>
            </TabItem>
        </TabControl>
        

        <Border Grid.ColumnSpan="2"  BorderBrush="White" BorderThickness="2">
            <Grid Background="#617C58" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Foreground="White" Padding="10" FontSize="20" VerticalAlignment="Center" FontWeight="Bold">Ime i prezime prijavljenog</TextBlock>
                <Button Name="ButtonOdjava" Grid.Column="1" Content="Odjavi se" Width="100" Margin="10" HorizontalAlignment="Right" Foreground="#348017" Background="white" Style="{StaticResource ModernButton}" ></Button>
            </Grid>
        </Border>
        
    </Grid>
</Window>
